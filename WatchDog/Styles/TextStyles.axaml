<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Heading Style -->
    <Style Selector="TextBlock.Heading">
        <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <Style Selector="TextBlock.Headingtwo">
        <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <Style Selector="TextBlock.Headingthree">
        <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- Label Style -->
    <Style Selector="TextBlock.Label">
        <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="TextBlock.Labeltwo">
        <Setter Property="Foreground" Value="{DynamicResource TextDimBrush}" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>


    <Style Selector="TextBlock.ErrorLabel">
        <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Error Message Style -->
    <Style Selector="TextBlock.ErrorMessage">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
</Styles>